<Window x:Class="TaskManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManagementApp"
        mc:Ignorable="d"
        Title="Task Manager" Height="450" Width="500"
        BorderBrush="LightGray" Loaded="Window_Loaded">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <LinearGradientBrush.RelativeTransform>
                <TransformGroup>
                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                    <SkewTransform CenterY="0.5" CenterX="0.5"/>
                    <RotateTransform Angle="-21.801" CenterY="0.5" CenterX="0.5"/>
                    <TranslateTransform/>
                </TransformGroup>
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="#FF3C34F0" Offset="0.539"/>
            <GradientStop Color="Black" Offset="1.2"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="TasksLbx" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="2" Grid.RowSpan="1" Margin="10" Padding="20" VerticalAlignment="Top" Width="250" Height="auto" MinHeight="100" BorderBrush="#FFF3EBEB" Background="#00000000" Foreground="#FFF3EBEB"/>
        <Button x:Name="addTaskBtn" Content="New Task" Grid.Row="3" Grid.Column="0" Style="{StaticResource WideButtons}"/>
        <StackPanel  Grid.Row="4" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" Width="200">
            <Button x:Name="saveTasksBtn" Content="Save" Style="{StaticResource SmallerButtons}"/>
            <Button x:Name="loadTasksBtn" Content="Load" Style="{StaticResource SmallerButtons}"/>
        </StackPanel>
        <ComboBox x:Name="categoriesCbx" HorizontalAlignment="Left" Margin="10,5,5,5" Grid.Row="1" VerticalAlignment="Center" MinWidth="120" BorderBrush="#FFF3EBEB" Foreground="#FFF3EBEB">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF3C34F0" Offset="0"/>
                    <GradientStop Color="#FF16127C" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <TextBox x:Name="searchTxBx" Grid.Row="1" Text="Search" Style="{StaticResource SearchBox}"/>

    </Grid>
</Window>
